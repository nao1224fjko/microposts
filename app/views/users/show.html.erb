<div class="row">
    
    <aside class="col-md-4">
        <section class="user_info">
            <%= render 'profile', user: @user %>
        </section>
    </aside>
    
    <div class="col-md-8">
        <!-- フォローフォームを表示 -->
        <%= render 'follow_form' if logged_in? %>
        
        <!-- ユーザーがマイクロポスト投稿してある場合
        投稿数を表示 -->
        <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
            <!-- 投稿を表示 -->
            <%= render @microposts %>
        </ol>
        <%= paginate @microposts %>
        <% end %>
        
    </div>
    
</div>