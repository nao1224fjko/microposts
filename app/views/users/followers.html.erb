<div class="row">
    
    <aside class="col-md-4">
        <section class="user_info">
            <%= render 'profile', user: @user %>
        </section>
    </aside>
    
    <div class="col-md-8">
      <h3>フォロワー一覧(<%= @user.follower_users.count %>)</h3>
      <% @users.each do |user| %>
        <%= link_to user.name, user %>
        <br>
      <% end %>
    </div>
    
</div>