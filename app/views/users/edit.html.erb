<h1>Setting</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        
            <%= f.label :nickname %>
            <%= f.text_field :nickname, class: 'form-control' %>
            
            <%= f.label :birthday %>
            <%= f.date_field :birthday, class: 'form-control' %>
            
            <%= f.submit "Submit", class: "btn btn-primary" %>
        
        <% end %>
    </div>
</div>