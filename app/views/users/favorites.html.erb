<div class="row">
    
    <aside class="col-md-4">
        <section class="user_info">
            <%= render 'profile', user: @user %>
        </section>
    </aside>
    
    <div class="col-md-8">

        <!-- ユーザーがマイクロポスト投稿してある場合
        投稿数を表示 -->
        <% if @user.favorite_microposts.any? %>
        <h3>お気に入り (<%= @user.favorite_microposts.count %>)</h3>
        <ol class="microposts">
            <!-- 投稿を表示 -->
            <%= render @microposts %>
        </ol>
        <% end %>
        
    </div>
    
</div>